//- section-title 

mixin section-title(className, val)
  div(class=`${className}`)
    .left-dash
    .title__block
      h1.section__title= val
    .right-dash

mixin subSection-title(className, val)
  div(class=`${className}`)
    .left-dash
    .title__block
      h2.sub-section__title= val
    .right-dash

//- avatar

mixin avatar(titles__name, titles__desc)
  .avatar
  .img__wrap
    .avatar__img
      img.img__image(src="./assets/img/elem/my_ava.jpg", alt="")
  .avatar__titles
    h2(class=`${titles__name}`) Шереверов Евгений
    h4(class=`${titles__desc}`) Личный сайт веб разработчика

//- arrow

mixin arrow(direction)
  .arrow(class=`${direction}`)
    a(href="#").arrow__link
      svg.arrow-down__icon
        use(xlink:href="./assets/img/icons/sprite/sprite.svg#arrow_down")